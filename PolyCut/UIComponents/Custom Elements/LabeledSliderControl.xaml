<UserControl
    x:Class="LabeledSliderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PolyCut"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    x:Name="root"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <Label Margin="0,20,0,-5" Content="{Binding LabelText, ElementName=root}" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>

            <Slider
                Margin="0,5,0,0"
                VerticalAlignment="Center"
                IsSnapToTickEnabled="True"
                Maximum="{Binding Maximum, ElementName=root}"
                Minimum="{Binding Minimum, ElementName=root}"
                TickFrequency="{Binding TickFrequency, ElementName=root}"
                Value="{Binding Value, ElementName=root, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <ui:NumberBox
                Grid.Column="2"
                Background="Transparent"
                BorderBrush="Transparent"
                ClearButtonEnabled="False"
                IsReadOnly="{Binding NumberIsReadOnly, ElementName=root}"
                SpinButtonPlacementMode="Hidden"
                Value="{Binding Value, ElementName=root, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />

            <Label
                Grid.Column="2"
                Margin="-50,0,0,0"
                Padding="1,2,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Content="{Binding UnitText, ElementName=root, FallbackValue=unit/s}"
                Foreground="{StaticResource ControlFillColorSecondaryBrush}" />

        </Grid>
    </StackPanel>
</UserControl>
