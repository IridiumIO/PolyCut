<ui:FluentWindow
    x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:PolyCut"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svg="http://sharpvectors.codeplex.com/runtime/"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    x:Name="MainWindowView"
    Title="PolyCut"
    Width="1300"
    Height="700"
    d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    RenderOptions.BitmapScalingMode="HighQuality"
    WindowBackdropType="Mica"
    WindowChrome.IsHitTestVisibleInChrome="True"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing" SourceObject="{Binding ElementName=MainWindowView}">
            <i:InvokeCommandAction Command="{Binding MainViewClosingCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>



        <ui:TitleBar
            x:Name="MWTitleBar"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Background="Transparent"
            IsHitTestVisible="True">

            <ui:TitleBar.Header>
                <StackPanel Height="25" Orientation="Horizontal">
                    <ui:ImageIcon Margin="15,2,8,0" Source="/PolyCut;component/Resources/logo.ico" />
                    <Label
                        Width="400"
                        Margin="0,3,0,0"
                        VerticalAlignment="Center"
                        Content="PolyCut"
                        Foreground="#40FFFFFF" />


                </StackPanel>

            </ui:TitleBar.Header>
            <ui:TitleBar.CenterContent>

                <Menu Margin="-345,1,0,0" Visibility="{Binding ElementName=MWTitleBar, Path=IsMouseOver, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Menu.Resources>
                        <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="Transparent" />
                    </Menu.Resources>

                    <MenuItem Header="_File">
                        <MenuItem Command="{Binding SaveProjectCommand}" Header="_Save Project..." />
                        <MenuItem Command="{Binding SaveProjectAsCommand}" Header="S_ave Project As..." />
                        <MenuItem Command="{Binding LoadProjectCommand}" Header="_Load Project..." />
                    </MenuItem>
                    <MenuItem Header="_View">
                        <StackPanel Orientation="Horizontal">
                            <ToggleButton IsChecked="{Binding CuttingMatVisibility, Mode=TwoWay}">
                                <ToggleButton.Template>
                                    <ControlTemplate>
                                        <ContentControl>
                                            <ContentControl.Style>
                                                <Style TargetType="ContentControl">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType={x:Type ToggleButton}}}" Value="True">
                                                            <Setter Property="Content">
                                                                <Setter.Value>
                                                                    <ui:Card
                                                                        Padding="8,4"
                                                                        Background="Transparent"
                                                                        BorderBrush="{StaticResource PaletteBlueBrush}">
                                                                        <ui:SymbolIcon Symbol="Eye24" />
                                                                    </ui:Card>
                                                                </Setter.Value>
                                                            </Setter>

                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType={x:Type ToggleButton}}}" Value="False">
                                                            <Setter Property="Content">
                                                                <Setter.Value>
                                                                    <ui:Card
                                                                        Padding="8,4"
                                                                        Background="Transparent"
                                                                        BorderBrush="{StaticResource ControlFillColorSecondaryBrush}">
                                                                        <!--  Replace with your unchecked icon  -->
                                                                        <ui:SymbolIcon Symbol="EyeOff24" />
                                                                    </ui:Card>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ContentControl.Style>
                                        </ContentControl>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <Label Margin="10,4,10,0" Content="Show Cutting Mat" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <ToggleButton IsChecked="{Binding WorkingAreaVisibility, Mode=TwoWay}">
                                <ToggleButton.Template>
                                    <ControlTemplate>
                                        <ContentControl>
                                            <ContentControl.Style>
                                                <Style TargetType="ContentControl">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType={x:Type ToggleButton}}}" Value="True">
                                                            <Setter Property="Content">
                                                                <Setter.Value>
                                                                    <ui:Card
                                                                        Padding="8,4"
                                                                        Background="Transparent"
                                                                        BorderBrush="{StaticResource PaletteBlueBrush}">
                                                                        <ui:SymbolIcon Symbol="Eye24" />
                                                                    </ui:Card>
                                                                </Setter.Value>
                                                            </Setter>

                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType={x:Type ToggleButton}}}" Value="False">
                                                            <Setter Property="Content">
                                                                <Setter.Value>
                                                                    <ui:Card
                                                                        Padding="8,4"
                                                                        Background="Transparent"
                                                                        BorderBrush="{StaticResource ControlFillColorSecondaryBrush}">
                                                                        <!--  Replace with your unchecked icon  -->
                                                                        <ui:SymbolIcon Symbol="EyeOff24" />
                                                                    </ui:Card>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ContentControl.Style>
                                        </ContentControl>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <Label Margin="10,4,10,0" Content="Show Printer Working Area" />
                        </StackPanel>

                    </MenuItem>
                    <Separator />
                    <ui:MenuItem
                        x:Name="UndoButtonGlobal"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding UndoCommand}"
                        Icon="{ui:SymbolIcon ArrowUndo16}" />
                    <ui:MenuItem
                        x:Name="RedoButtonGlobal"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding RedoCommand}"
                        Icon="{ui:SymbolIcon ArrowRedo16}" />

                </Menu>



            </ui:TitleBar.CenterContent>
        </ui:TitleBar>

        <ui:NavigationView
            x:Name="NavigationView"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            IsBackButtonVisible="Collapsed"
            PaneDisplayMode="Top"
            PaneTitle="PlotPrint">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                    Margin="15,2"
                    Content="Home"
                    NavigationCacheMode="Required"
                    Tag="{Binding}"
                    TargetPageType="{x:Type local:SVGPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon
                            Filled="True"
                            Foreground="{StaticResource PaletteLightBlueBrush}"
                            Symbol="Home12" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    Margin="15,2"
                    Content="Preview"
                    NavigationCacheMode="Required"
                    Tag="{Binding}"
                    TargetPageType="{x:Type local:PreviewPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="DrawShape24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    Margin="15,2"
                    Content="Export"
                    NavigationCacheMode="Required"
                    Tag="{Binding}"
                    TargetPageType="{x:Type local:ExportPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="SaveArrowRight20" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    Margin="15,2"
                    Content="Monitor"
                    NavigationCacheMode="Required"
                    Tag="{Binding}"
                    TargetPageType="{x:Type local:MonitorPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Screenshot20" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>

            <ui:NavigationView.FooterMenuItems>

                <ui:NavigationViewItem x:Name="GenerateGCodeButton">
                    <ui:Button Command="{Binding GenerateGCodeCommand}" Content="Generate GCode" />
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    Margin="-5,0,15,1"
                    NavigationCacheMode="Required"
                    Tag="{Binding}"
                    TargetPageType="{x:Type local:SettingsPage}">

                    <ui:SymbolIcon
                        Margin="0,0,-3,0"
                        FontSize="16"
                        Symbol="Settings48" />

                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>

            <ui:NavigationView.ContentOverlay>
                <Grid>
                    <ui:SnackbarPresenter x:Name="SnackbarPresenter" />
                </Grid>
            </ui:NavigationView.ContentOverlay>
        </ui:NavigationView>
        <ContentPresenter
            x:Name="RootContentDialog"
            Grid.Row="0"
            Grid.RowSpan="2"
            ClipToBounds="True" />
        <ui:SnackbarPresenter
            x:Name="RootSnackbar"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2" />

    </Grid>
</ui:FluentWindow>
