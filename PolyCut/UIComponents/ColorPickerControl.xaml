<UserControl
    x:Class="ColorPickerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Label VerticalAlignment="Center" Content="{Binding LabelText, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        <Button
            x:Name="ColorButton"
            Grid.Column="1"
            Padding="4"
            Click="ColorButton_Click">
            <Border
                Width="48"
                Height="24"
                Background="{Binding CurrentColor, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="4" />
        </Button>
        <Popup
            x:Name="ColorPopup"
            AllowsTransparency="True"
            Placement="Bottom"
            PlacementTarget="{Binding ElementName=ColorButton}"
            StaysOpen="False">
            <Border
                Padding="8"
                Background="{DynamicResource ApplicationBackgroundBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="10"
                        Direction="270"
                        Opacity="0.8"
                        ShadowDepth="2" />
                </Border.Effect>
                <StackPanel>
                    <ItemsControl>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="4" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Margin="5"
                                    Padding="5"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="ColorMenuItem_Click"
                                    Tag="{Binding}">
                                    <Border
                                        Width="32"
                                        Height="32"
                                        Background="{Binding}"
                                        BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4" />
                                    <Button.ToolTip>
                                        <ToolTip Content="{Binding}" />
                                    </Button.ToolTip>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.Items>
                            <SolidColorBrush Color="Black" />
                            <SolidColorBrush Color="Red" />
                            <SolidColorBrush Color="Cyan" />
                            <SolidColorBrush Color="Orange" />
                            <SolidColorBrush Color="Gray" />
                            <SolidColorBrush Color="Blue" />
                            <SolidColorBrush Color="Magenta" />
                            <SolidColorBrush Color="Indigo" />
                            <SolidColorBrush Color="White" />

                            <SolidColorBrush Color="#FF00FF00" />


                            <SolidColorBrush Color="Yellow" />
                            <SolidColorBrush Color="Transparent" />

                        </ItemsControl.Items>
                    </ItemsControl>

                    <Separator Margin="0,8,0,8" />

                    <Grid Margin="8,0,8,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            Text="Hex:" />
                        <ui:TextBox
                            x:Name="HexTextBox"
                            Grid.Column="1"
                            KeyDown="HexTextBox_KeyDown"
                            LostFocus="HexTextBox_LostFocus"
                            MaxLength="9"
                            Text="{Binding HexColor, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <ui:TextBox.ToolTip>
                                <ToolTip Content="Enter hex color (e.g., #FFFF0000 or #FF0000)" />
                            </ui:TextBox.ToolTip>
                        </ui:TextBox>

                        <ui:Button
                            x:Name="EyedropperButton"
                            Grid.Column="2" Height="35" Width="35"
                            Margin="8,0,0,0"
                            Padding="4"
                            Click="EyedropperButton_Click">
                            <ui:SymbolIcon Symbol="Eyedropper20" />
                        </ui:Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>
